.ellipse {
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.w_headers {
  position: fixed;
  z-index: 100;
  height: 88rpx;
  width: 100%;
  background: #fff;
  border-bottom: 1px solid #ebebeb;
  top: 0;
  left: 0;
  display: flex;
}
.w_head_leftback {
  position: absolute;
  top: -3px;
  width: 15%;
  padding-left: 20rpx;
  height: 88rpx;
  overflow: hidden;
}
.w_head_leftback::before {
  font-family: nwscfonts!important;
  font-weight: 400;
  font-style: normal;
  content: "\E004";
  color: #333;
  font-size: 80rpx;
  vertical-align: middle;
}
.w_head_rightTxt {
  position: absolute;
  top: 0;
  font-size: 30rpx;
  color: #666;
  line-height: 88rpx;
  width: 15%;
  text-align: right;
  right: 20rpx;
}
.w_head_title {
  width: 100%;
  font-size: 34rpx;
  color: #333;
  text-align: center;
  line-height: 88rpx;
  font-weight: 600;
}
.popup-wrap {
  position: fixed;
  z-index: 1000;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  width: 100%;
  height: 100%;
}
.popup-img {
  display: block;
  width: 100%;
}
.loading-layer {
  width: 100%;
  height: 60px;
  text-align: center;
  font-size: 16px;
  line-height: 60px;
  color: #aaa;
  position: relative;
}
.reset-share-btn {
  border:none!important;
