/* pages/store/store.wxss */
@import '../../style/flex.wxss';
page{
  background: #f5f5f5;
}
page,view,text,label,image{
box-sizing: border-box;-webkit-box-sizing: border-box;
}
.scroll_top {
  position: fixed;
  top: 0;
  width: 100%;
  text-align: center;
  height: 80rpx;
  vertical-align: middle;
  line-height: 80rpx;
  font-size: 24rpx;
  z-index: 999;
  background: #fff;padding:10rpx 20rpx;
}
/* //搜索框 */
.scroll_top_input {
  width:100%;
  outline: none;
  position: relative;
  border: none;
  background: #eeeeee;
  text-align: left;
  vertical-align: middle;
  border-radius: 60rpx;
  font-size:26rpx;height: 60rpx;
  color:#333;padding-left:70rpx;
}

.slide-image{
  width:100%;
}
/*搜索图标*/
.scroll_top_search {
  font-size: 20rpx;
  position: absolute;
  top: 0;
  left: 20rpx;
}
/*搜索图标*/
.scroll_top_search:before {
   display: inline-block;
  content: '\e625';
  font-size: 40rpx;
  font-family: iconfont !important;
  vertical-align: middle;
  margin-top: -10rpx;
  margin-right: 24rpx;color:#666;
}
/* 取消图标 */
.w_popColsed{
  z-index:9999;
  position: absolute;
  top: -10rpx;
  right: 0;
}
.w_popColsed:before{
  display: inline-block;
  content: 'X';
  font-size: 35rpx;
  font-family: nwscfonts !important;
  vertical-align: middle;
  margin-top: 10rpx;
  margin-right: 24rpx;
}

/* tab栏 */
.swiper-wrap-tab{
  position: fixed;top:80rpx;left:0;width:100%;background: #fff;z-index: 101;
  border-bottom: 1px solid #ebebeb;height: 82rpx;
}
.swiper-item-tab{
  height: 82rpx;font-size: 30rpx;color:#333;text-align: center;width:150rpx !important;
  /* padding:0 20rpx; */
}
.swiper-item-tab-text{
  display: inline-block;height:78rpx;line-height: 78rpx;width:100rpx;text-align:center;
}
.active-tab{
   color:#e61817;border-bottom:4rpx solid #e61817;
}
.w_sw_con {
  margin-top:162rpx;
  min-height: calc(100vh - 162rpx);
  overflow: scroll;
}
.w_sw_con2{
  margin-top:80rpx;
  min-height: calc(100vh - 80rpx);
  overflow: scroll;
}
.swiper-slide {
  width: 100%;
  height: 100%;
  position: relative;
}

/**没有商品时**/
.eb_noPros{
    width:100%;text-align:center;padding:150rpx 50rpx 50rpx 50rpx;display:none;  
}
.eb_noShows{display:block;}
.eb_noTxts{text-align:center;font-size:32rpx;color:#666;padding:15rpx 0;line-height:100rpx;}
/**加载更多**/
.w_loading_box{
  width:100%;text-align: center;padding-bottom: 2.5%;
}
.w_load_tips{
  text-align: center;font-size: 28rpx;color:#999;line-height: 100rpx;
}


.mall_box{
  width:100%;display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  flex-wrap: wrap;-ms-flex-wrap: wrap;-webkit-flex-wrap: wrap;
}

.mall_list{
  margin-left: 2%;
  background: #fff;width:48%;margin-top: 20rpx;padding-bottom: 10rpx;
}

.mall_pd{margin:0 20rpx;}
.mall_t_img{
  width:100%;height:350rpx;border-bottom:1px solid #ebebeb;
  overflow: hidden;
}
.mall_t_img image{
  width:100%;
}
.mall_t_tit{
  font-size: 30rpx;color:#333;padding-top:20rpx;
  text-overflow: ellipsis;overflow:hidden;-webkit-box-orient: vertical;display:-webkit-box;-webkit-line-clamp: 2;
}
.mall_t_tip{
  font-size:24rpx;color:#e61817;padding:0 15rpx;
  background: #ffedec;border-radius: 30rpx;height: 30rpx;line-height: 30rpx;
  }
