/* pages/addressList/addressList.wxss */
page{background: #f5f5f5;}
page,view,text,label,image{
box-sizing: border-box;-webkit-box-sizing: border-box;
}
.ad_cons{
  width:100%;margin-bottom:90rpx;
}
.items{
    width: 100%;
}
.item{
    position: relative;
    height: 180rpx;
    /* line-height: 120rpx; */
    overflow: hidden;background: #fff;
}
.inner{
    position: absolute;
    top:0;
}
.inner.txt{
    width: 100%;background: #fff;
    z-index: 5;height: 180rpx;
    padding:30rpx 15rpx;
    transition: left 0.2s ease-in-out;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}
.inner.del{
    background:#f00;
    width: 180rpx;
    text-align: center;
    z-index: 4;
    right: 0;line-height: 180rpx;
    color: #fff;
}
.item-icon{
    width: 64rpx;
    height: 120rpx;
    vertical-align: middle;
    margin-right: 16rpx
}

.it_phone{
  font-size: 30rpx;color:#333;width:80%;padding-bottom: 6rpx;
}
.it_phone text{font-size: 32rpx;font-weight: bold;margin-right:50rpx;}

.it_ads{width:80%;font-size: 30rpx;color:#333;text-overflow: ellipsis;overflow:hidden;
white-space:normal;}
.it_ads text{color:#e61817;background:#ffe1e1;border-radius: 6rpx;margin-right:10rpx;height: 30rpx;line-height: 30rpx;font-size: 24rpx;padding:0 6rpx;}
.it_edits{
  font-size: 30rpx;color:#999;
  position: absolute;right:0;width:17%;text-align: center;top:70rpx;border-left:1px solid #ebebeb;
}


.ad_fots{
  position: fixed;left:0;width:100%;bottom:0;background: #fff;z-index: 100;
  height: 80rpx;line-height: 80rpx;text-align: center;font-size: 30rpx;color:#333;border-top:1px solid #ebebeb;
}