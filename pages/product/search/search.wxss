/* pages/product/search/search.wxss */
@import "/style/common.wxss";
.head_index {
  z-index: 100;
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  width: 100%;
  background: #fff;
  height: 88rpx;
  border-bottom: 1px solid #f5f5f5;
}
.head_i_cens {
  position:relative;
  background: #f5f5f5;
  margin: 14rpx 20rpx 0;
  padding-left: 20rpx;
  padding-right: 20rpx;
  height: 66rpx;
  margin-top: 10rpx;
  border-radius: 66rpx;
  width: 80%;
}
.head_i_cens:before {
  line-height: 66rpx;
  margin-right: 12rpx;
  display: inline-block;
  font-family: iconfont!important;
  font-weight: 400;
  font-style: normal;
  content: '\e625';
  color: #666;
  font-size: 40rpx;
  vertical-align: top;
}
.search_form {
  display: inline-block;
  width: 90%;
  height: 60rpx;
}
.search_input {
  font-size: 26rpx;
  color: #999;
  vertical-align: middle;
  height: 60rpx;
  width: 100%;
}
.w_hisSearBox {
  margin-bottom: 20rpx;
}
.w_HistorySearch {
  /* width: 100%; */
  background: #fff;
  padding: 20rpx;
  margin-bottom: 1rpx;
}
.w_hisSear_tit {
  font-size: 30rpx;
  font-weight: 400;
  color: #828282;
  position: relative;
}
/* 取消图标 */
.w_popColsed{
  z-index:9999;
  position: absolute;
  top: 0;
  right: 0;
}
.w_popColsed:before{
  display: inline-block;
  content: '\e70b';
  font-size: 35rpx;
  font-family: iconfont !important;
  vertical-align: middle;
  margin-top: 10rpx;
  margin-right: 24rpx;
}
.delete_icon {
  display: block;
  /* width: 10%; */
  text-align: center;
  position: absolute;
  right: 0;
  top: 0;
  z-index: 101;
}
.delete_icon::before {
  font-family: iconfont!important;
  font-weight: 400;
  font-style: normal;
  content: "\e6b4";
  color: #828282;
  font-size: 40rpx;
  vertical-align: middle;
  line-height: 30rpx;
}
.w_hisSear_list {
  width: 100%;
  margin-top: 35rpx;
  margin-bottom: 15rpx;
  height: 64rpx;
  white-space: nowrap;
  overflow: hidden;
}
.tab-item {
  color: #666;
  font-size: 28rpx;
  height: 64rpx;
  line-height: 64rpx;
  padding: 0 35rpx;
  border-radius: 64rpx;
  background: #e3e3e4;
  margin-right: 30rpx;
  display:inline-block;
}
