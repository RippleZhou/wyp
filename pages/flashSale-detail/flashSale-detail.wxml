<!--pages/flashSale-detail/flashSale-detail.wxml-->
<wxs module="util" src="./flashSale-detail.wxs"></wxs>
<!--轮播图-->
<swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" indicator-color="{{indicatorColor}}" indicator-active-color="{{activeColor}}" circular='{ true }' bindchange="bindchange" style="height:{{imgheights[current]}}rpx;">
  <block wx:for="{{masterPicture}}" wx:key="unique">
    <swiper-item>
      <image src="{{ item ||errorImg}}" mode='widthFix' data-id='{{index}}' class="slide-image" binderror="errImg" data-index="{{index}}" bindload="imageLoad" />
    </swiper-item>
  </block>
</swiper>
<view class='details_introduce' >
  <view class="flashSale">
    <view class="flashSale_time">限时抢购</view>
    <view class='font_40 detail_price '>￥</view>
    <view class=' detail_price font_40'>{{proInfor.productSalePrice}}</view>
    <view class='bsc_price'>￥ {{proInfor.productBasicPrice}}</view>
    <view class="Countdown" wx:if="{{!actShow}}">
      <view class="Countdown_last" >{{activityTxt}}</view>
      <view class="Countdown_timer">
        <text class="">{{day}}</text>天
        <text>{{hou}}</text>:
        <text>{{min}}</text>:
        <text>{{sec}}</text>
      </view>
    </view>
    <view class="Countdown_over font_36" wx:else>{{activityTxt}}</view>
  </view>
  <view class='font_30 detail_title font_333'>
    {{proInfor.productTitle}}
  </view>
  <view class="get_wyb">
    <text class=' price-rmb'>可获得物业币{{proInfor.housingCoin}}</text>
    <text class="sale_num detail_getwyb">已抢{{proInfor.saleNum}}件</text>
  </view>
  <view class='delivery'>
    <text class='delivery_day'>发货时间</text>
    <text class='delivery_time'>{{sendBeginDate}} ~ {{sendEndDate}} </text>
  </view>
  <view class='detail_specifications pad_20 flex flex-main-justify' bindtap='toggleSpecs'>
    <view class='font_999 font_30'>
      <text> 规格</text>
      <text wx:if="{{skuList[skuSelected].attr_name_ext||skuList[skuSelected].attr_name}}">{{util.selnameExt(skuList[skuSelected].attr_name_ext,skuList[skuSelected].attr_name)}}</text>
      <text wx:else class='mar_left_10 font_333 font_30'>请选择规格</text>
    </view>
    <view bindtap='toggleSpecs'>
      <text class='font_999'>＞</text>
    </view>
  </view>
</view>
<view class='details_content'>
  <view class='details_content_banner'>
    <image wx:for="{{productImgs}}" mode='widthFix' wx:key="{{index}}" src="{{ item || errorImg}}" class='product-imgs'></image>
  </view>
</view>
<view class='saler_list'></view>
<view class="footer flex flex-main-center {{isIpx?'fix-iphonex-button':''}}" wx:if="{{stus==3}}">
  <view class='go_index' bindtap='go_index'>
    <view class='go_img'>
      <image src="/img/homeicon.png"></image>
    </view>
    <view class='go_text'>首页</view>
  </view>
  <view class='go_cars' bindtap='go_car'>
    <view class='go_img'>
      <image src="/img/shopcaricon.png"></image>
    </view>
    <view class='go_text'>购物车</view>
  </view>
  <view class='left'>
    <text class='text' bindtap="addcart">加入购物车</text>
  </view>
  <view class='right'>
    <text class='text' bindtap="goPay">立即购买</text>
  </view>
</view>
