<!--pages/my/my.wxml-->
<!--顶部地址及介绍-->
<!-- <view class='wyb_bar' style='margin-top:50rpx;'>物业帮</view> -->
<view class='top'>
  <text class='topdeliverytimetxt'>20分钟送达</text>
  <text class='dwtxt' get>{{dwaddress}}</text>
  <text bindtap="scrollbottom" class='scan'></text>
  <text bindtap="scrollbottom" class='searchicon'></text>
</view>
<view class='je'>
  <text class='xdj'>下单即送物业币</text>
  <view class='wtwybtxt' bindtap='wybAbout'>什么是物业币?</view>
  <text class='wyname'>{{wyname}}</text>
</view>
<!--轮播图-->
<swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" indicator-color="{{indicatorColor}}" indicator-active-color="{{activeColor}}" circular='{ true }'>
  <view wx:for="{{imgUrls}}">
    <swiper-item>
      <navigator url="{{item.link}}" hover-class="navigator-hover">
        <image src="{{item.url}}" class="slide-image" />
      </navigator>
    </swiper-item>
  </view>
</swiper>
<!--产品列表--> 
<view wx:for="{{cartItems}}" bindtap='choosedetail' data-listdata='{{item}}'>
  <view class='prolist'>
    <view wx:if="{{!item.status}}" class='qgl'>抢光了~</view>
    <view wx:if="{{!item.status}}" class='zz'></view>
    <view class='imgview'>
      <image class="imgmast" src="{{item.pimg}}"></image>
    </view>
    <view class='proinfoview'>
      <view class='pronametxt'>
        <text>{{item.pname}}</text>
      </view>
      <view>
        <text class='getwybtxt'>{{item.getwyb}}</text>
      </view>
      <view class='priceinfo'>
        <view>
          <text class='price-rmb pricetxt'>￥</text>
          <text class='pricetxt'>{{item.price}}</text>
          <text class='saleno'>{{item.saleno}}</text>
          <view class='utxview'>
            <!-- <block wx:for="{{cartItems}}">
              <image wx:if="{{prolistId==1}}" class='utximg' src='{{item.userimg}}'></image>
              <image wx:if="{{prolistId==2}}" class='utximg2' src='{{item.userimg}}'></image>
            </block> -->
            <view>
              <image class='utximg' src='{{item.userimg}}'></image>
              <image class='utximg2' src='{{item.userimg}}'></image>
            </view>
             <text class='caricon'></text>
          </view>
        </view>
      </view>
    </view>
  </view>
</view>