//下单时间是否在24小时之内
function timeIs(datas){
  var hours =0
  var nowDate = getDate()
  var name=''
  if (datas){
    var dasDate=getDate(datas)
    var hours = (nowDate - dasDate)/1000/60/60/24
    console.log(hours, '***')
    if (hours>1){
      name=0
    }else{
      name = 1
    }
  }
  return name
}
function getPayTxt(type){
  var name = ''
  if (type == 1 || type == 2 || type == 5 || type == 6 || type == 7 || type == 8) {
    name = "微信"
  } else if (type == 3 || type == 4) {
    name = "支付宝"
  }
  return name
}
function cancelReasonT(type) {
  var name = ''
  if (type == 1) {
    name = "微信"
  } else if (type == 3 || type == 4) {
    name = "支付宝"
  }
  return name
}
// 新订单：0待付款；1待接单，14待提货
// 待送达 ：2已接单，4已取货
// 已取消：5已取消，7支付失败
// 已完成：6已送达；10待平台同意退货；13退换货失效；15已退货
// 19：退货用户撤销 9退货成功；

module.exports = {
