<!--pages/shoppingcar/shoppingcar.wxml-->
<view class="pages">
  <view wx:if="{{hasList}}">
  <!-- 编辑 -->
    <view class='edit'><label class='edit_btn' bindtap='btn_edit'>{{edit_name}}</label></view>
      <!-- 列表 -->
      <view class="list flex flex-main-left" wx:for="{{list}}" wx:key="{{index}}">
        <!-- radio选择IOCN -->
        <!-- <icon wx:if="{{item.selected}}"   type="success" color="#405A8F;" data-index="{{index}}" class="radio_chek" bindtap="selectList" /> -->
      <view class='icon'>
            <icon wx:if="{{item.selected}}" type="success" color="#fa0000" size="20" bindtap="selectList" data-index="{{index}}" class='radio_chek' />
            <icon wx:else type="circle" bindtap="selectList" size="20" data-index="{{index}}" class='radio_chek' />
      </view>
        <!-- 列表商品图片 -->
      <view class="list_img"><image  src="{{item.pimg}}"></image></view>
        <!-- 列表标题 -->
      <view>
        <view class="list_name">{{item.pname}}</view>
        <!-- 商品数量加减  style='display:{{show_edit}}'-->
        <view class="carts-num">
          <text class="list_name">{{item.pname}}</text>
          <!-- 价格 -->
          <text class="list_price">￥{{item.price}}</text>
          <!--减按钮  -->
          <text class="minus" bindtap="btnMinus" data-obj="{{obj}}" data-index="{{index}}">-</text>
          <!-- 文本框值 -->
          <!-- <input class="view_text_center" disabled='disabled' value="{{item.num}}" bindinput='input_num' data-index="{{index}}"></input> -->
          <text class="view_text_center"  bindinput='input_num' data-index="{{index}}">{{item.num}}</text>
          <!-- <text class="cart-count-num">{{item.num}}</text> -->
          <!-- 加按钮-->
          <text class="plus" bindtap="btnAdd" data-index="{{index}}">+</text>
        </view>
      </view>
        <!-- 删除 -->
        <!-- <text class="list_del" bindtap="deleteList" data-index="{{index}}">×</text> -->
    </view>
    <view class="count">
        <view class='icon selectAll'  bindtap="selectalltap">
            <icon wx:if="{{item.selectAllStatus}}" type="success" color="#fa0000" size="20" bindtap="selectList" data-index="{{index}}" class='radio_chek' />
            <icon wx:else type="circle" bindtap="selectList" size="20" data-index="{{index}}" class='radio_chek' />
            <text class="sel_count_name font_26">全选</text>
        </view>
        <!-- <view class="selectAll" bindtap="selectalltap">
            <icon class="noSelected" wx:if="{{!isSelectedAll}}"/>
            <image class="selectedImg" wx:else src="/images/selected.png"></image>
            <text class="sel_count_name font_26">全选</text>
        </view> -->
        <view class="count_price font_30 flex flex-wrap">
          <view><text>合计:</text>
            <text class='color_red'>￥{{totalPrice}}</text>
          </view>
          <view class='wyb_account font_24'> 
              <text class='color_red'>可获得物业币{{countPrice}}</text> 
          </view>
        </view>
        <view class="account submit" bindtap='btn_submit_order'>
          <text class='font_34' >去结算</text>
          <!-- <text>({{totalPrice}})</text> -->
        </view>
    </view>
  </view>
</view>

