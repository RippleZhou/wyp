  font-size: 30rpx;
}
/*搜索图标*/
.searchicon {
  margin-left: 10rpx;
  font-size: 30rpx;
  float: right;
}

/*搜索图标*/
.searchicon:before{
  display: inline-block;
  content: '\e137';
  font-size:85rpx;font-family: nwscfonts !important;vertical-align:middle;
  margin-top: -10rpx;margin-right: 24rpx;
}
/*扫一扫图标*/
.scan {
  margin-left: 10rpx;
  font-size: 30rpx;
  float: right;
}
/*扫一扫图标*/
.scan:before{
  display: inline-block;
  content: '\e033';
  font-size:85rpx;font-family: nwscfonts !important;vertical-align:middle;
  margin-top: -10rpx;margin-right: 20rpx;
}

.caricon{
  background-color:#f6f6f6;
  border-radius: 50%; 
  height: 50rpx;
  width: 50rpx;
  line-height: 50rpx;
  text-align: center;
}

.caricon:before{
 display: inline-block;
  content: '\e014';
  font-size:85rpx;font-family: nwscfonts !important;vertical-align:middle;
  margin-top: -24rpx;
  margin-right: 5rpx;
}



