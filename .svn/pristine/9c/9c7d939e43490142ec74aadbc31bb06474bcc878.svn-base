.top {
  text-align: center;
  height: 80rpx;
  vertical-align: middle;
  line-height: 80rpx;
  font-size: 30rpx;
}
/* 详情页图片 */
.details_content{
  height: 300rpx;
  width:100%;
  background: #f6f6f6;
  padding: 15rpx 0;
}
.details_content_banner{
  height: 100%;
  background: #ececec;
  text-align: center;
  line-height: 270rpx;
}
/* 已购买 */
.saler_list{
  border-bottom:1px solid #e6e6e6;
}
.personal_saler{
  height:  70rpx;
  line-height: 70rpx;
  padding: 0 24rpx;
  font-weight: 700;
  border-bottom:1px solid #e6e6e6;
}
.buyerlist{
  margin: 0 24rpx;
  height: 100rpx;
  line-height: 100rpx;
  border-bottom:1px solid #e6e6e6 ;

}
.buyer_info .utximg{
  top:10%;
}
/* 按钮 */
.details_button{
  padding:9rpx 24rpx;
}
.detail_btn{
  display: block;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
}
#joincar{
  background: #313238;
  border-radius: 50rpx 0 0 50rpx;
}
#buynow{
  background: #e61817;
  border-radius: 0 50rpx 50rpx 0;

}

/*定位的地址*/

.dwtxt {
  font-weight: bold;
