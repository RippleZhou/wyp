/* pages/order/order.wxss */
@import '../../style/flex.wxss';
page{
  background: #f6f6f6;
}
.order_list{
  background: #ffffff;
  margin-bottom: 20rpx;
}
.for_receive,.be_paid,.all_order{
  width: 100%;
  text-align: center;
}
text.active{
  border-bottom:1px solid #e61817;
}
.pricetxt {
  color: #e61817;
}
.on{ color: #e61817;
display:inline-block;
border-bottom: 5rpx solid #e61817;
}
.swiper-box{ display: block; height: 100%; width: 100%; overflow: hidden; }
.swiper-box view{
	text-align: center;
}
.swiper-tab{
	width: 100%;
	border-bottom: 2rpx solid #777777;
	text-align: center;
	line-height: 80rpx;}
.swiper-tab-list{  font-size: 30rpx;
	width: 33.33%;
	color: #777777;
}
/* table栏展示 */
.order_status,.order_total,.order_choice{
  background: #ffffff;
}
.order_status{
  padding:24rpx;
  height: 80rpx;
  line-height: 80rpx;
}
.order_list_time{
  color:#999999;
}
.order_list_img{
  padding: 17rpx;
}
.order_list_img image{
  width: 30%;
  height: 200rpx;
  margin: 7rpx;
}