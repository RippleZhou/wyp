<!--pages/CommodityList/CommodityList.wxml-->
<view class='flex flex-main-justify commodity_list'>
  <view>商品</view>
  <view>共<text class='commodity_total'></text>件</view>
</view>
<block wx:for='{{ commodityList }}'>
  <view class='commodity_top commodity_list flex flex-main-justify'> 
      <view class='flex-cross-stretch '><image src='{{item.url}}' class='commodity_img'></image></view>
      <view class='flex-cross-stretch '>      
        <view class='font_30 flex flex-main-justify'>
          <view>{{item.title}}</view>
          <view>¥{{item.totalPrice}}</view>
        </view>
        <view class='font_30 flex flex-main-justify'>
          <view>单价:¥{{item.price}}</view>
          <view>x{{item.amount}}</view>
        </view>
      </view>
  </view>
</block>